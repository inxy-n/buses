<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:layout_marginTop="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:layout_marginTop="0dp">


            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/nowTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingLeft="9dp"
                    android:text="Hello, World!"

                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/modify"
                    android:paddingTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>
                <Button
                    android:id="@+id/jianyitian"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:padding="1dp"
                    android:text="上一天"
                    android:layout_marginRight="1dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/rest"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:padding="1dp"
                    android:text="时间归零"
                    android:layout_marginRight="1dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/jiayitian"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="下一天"
                    android:padding="1dp"
                    android:layout_marginRight="1dp"
                    android:visibility="gone" />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:layout_y="136dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Shuttle Bus"
                    />
                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_marginTop="21dp"
                    android:paddingBottom="2dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:paddingTop="6dp">

                        <TextView
                            android:id="@+id/nearest_bus"
                            android:layout_width="103dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:text="list loaded failed" />
                    </LinearLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:layout_y="136dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Shantou Bus"
                    />
                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_marginTop="11dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_marginStart="50dp"
                            android:id="@+id/shantoubus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_y="141dp"
                            android:text="@string/loading_data" />
                    </LinearLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"

                android:layout_y="136dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qing Jü"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginTop="11dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/qingju"
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_y="141dp"
                            android:text="点击打开小程序🆗" />
                    </LinearLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:layout_y="136dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:contentPadding="5dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Walk"
                    />

                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="11dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="183dp"

                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_y="141dp"
                            android:text="其实走过去只要15分钟" />
                    </LinearLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>